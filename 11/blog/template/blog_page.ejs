<html>
<head>
    <style type="text/css">
        .entry_title {
            font-weight: bold;
        }

        .entry_date {
            font-style: italic;
        }

        .entry_body {
            margin-bottom: 1em;
        }
        body {
            font-size: 10px;
        }
    </style>
</head>

<body>
<% locals.entries.map(function(entry) { %>
    <div class="entry_title"><%= entry.title %></div>
    <div class="entry_date"><%= entry.date %></div>
    <div class="entry_body"><%= entry.body %></div>
<% }); %>
</body>
</html>
